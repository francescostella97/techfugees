<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    >

    <TextView
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:id="@+id/title_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Hi Migrant"
        android:textAlignment="center"
        android:textSize="70dp" />

    <EditText
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title_login"
        android:id="@+id/login_email_et"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="#FFF"
        android:hint="Email"
        android:paddingLeft="10dp" />

    <EditText
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_email_et"
        android:id="@+id/login_pwd_et"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#FFF"
        android:hint="Password"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_pwd_et"
        android:id="@+id/login_login_btn"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#FFF"
        android:gravity="center"
        android:text="LOGIN"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <!--<com.facebook.login.widget.LoginButton-->
    <!--android:id="@+id/login_fb_btn"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center"-->
    <!--android:layout_marginTop="60dp" />-->

    <ImageButton
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_login_btn"
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@null"
        android:paddingTop="60dp"
        android:src="@drawable/fblogin" />

    <TextView
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:text="Not a member? Sign up now."
        android:textColor="#FFF" />


</RelativeLayout>